<Window x:Class="demka.Sotrudnik"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:demka"
        mc:Ignorable="d"
        Title="Sotrudnik" Height="450" Width="800">
    <Grid>
        <ListView Name="ListView" HorizontalAlignment="Left" Height="249" Margin="85,127,0,0" VerticalAlignment="Top" Width="380" >
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Name}"
                            Header="Наименование"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Cena}"
                                Header="Цена"/>

                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</Window>
